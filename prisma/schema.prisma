generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  coverImg    String
  title       String
  images      String[]
  description String
  tools       String[]
  liveUrl     String?
  orderNo     Int?     @default(autoincrement())
}

model Tool {
  id      Int    @id @default(autoincrement())
  name    String
  emoji   String
  url     String
  orderNo Int?   @default(autoincrement())
}

model Service {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       String
  orderNo     Int?   @default(autoincrement())
}
